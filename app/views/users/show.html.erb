<div class="container">
  <div class="row g-4">
    <div class="col mt-5">
      <%= render 'users/profile', user: @user %>
      <% if @user.id == current_user.id %>
        <%= render 'posts/posts_form', post: @post %>
      <% end %>
    </div>
    <div class="col mt-5">
      <%= render 'posts/posts' %>
    </div>
    <div class="col mt-5">
      <%= render 'users', users: @users %>
    </div>
  </div>
</div>