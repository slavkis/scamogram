<div class="container">
  <div class="row">
    <div class="col mt-4">
      <%= image_tag @user.avatar.url(:thumb) if @user.avatar.present? %> 
      <h4>
        Hey, <%= @user.name %>, bro!
      </h4>
      <% if @user.id == current_user.id %>
        <%= render 'posts/posts_form', post: @post %>
      <% end %>
    </div>
    <div class="col mt-5">
      <%= render 'posts/posts' %>
    </div>
    <div class="col">
    </div>
  </div>
</div>