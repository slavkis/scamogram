  <%= form_for(Post.new, url: posts_path(post))do |f| %>
    <form>
      <div class="mb-3">
        <b>
          <%= f.label "write your post:", class: "form-label" %><br />
        </b>  
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :body, class: "form-label" %><br />
        <%= f.text_area :body, class: "form-control" %>
      </div>
        <%= f.submit "Post", class: "btn btn-outline-primary" %>
    </form>
  <% end %>