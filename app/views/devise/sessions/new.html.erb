<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col" style="margin-top: 8rem;">
      <div class="card p-2 bg-light", style="max-width: 20rem;">
        <h3 class="text-center">Scam in:</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-2">
            <%= f.label "emal:", class: "form-label"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="mb-2">
            <%= f.label "password:", class: "form-label"  %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="mt-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "form-label" %>
            </div>
          <% end %>
          <p><%= f.submit "Scam in", class: "btn btn-outline-secondary w-100" %></p>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>